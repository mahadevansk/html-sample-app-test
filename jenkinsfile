
pipeline {
    agent any

    stages {
        // stage1
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
     // stage to verify sonar-scanner 
     stage('sonar-scaner verify'){
         steps {
             echo 'checking version'
             // bat or pwsh
             bat """
             sonar-scanner --version
             echo Docker version
             docker --version
             echo -->Java--> 
             java --version
             """
           
         }
     }
    }
}
